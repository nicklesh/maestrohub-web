{
  "expo": {
    "name": "Maestro Habitat",
    "slug": "maestro-habitat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/mh_logo_1024_transparent.png",
    "scheme": "maestrohabitat",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.maestrohabitat.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Upload profile photos and coaching materials",
        "NSPhotoLibraryUsageDescription": "Select images for your profile",
        "NSCalendarsUsageDescription": "Sync coaching sessions with your calendar"
      }
    },
    "android": {
      "package": "com.maestrohabitat.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/mh_logo_1024_transparent.png",
        "backgroundColor": "#2563EB"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/mh_logo_1024_transparent.png",
      "name": "Maestro Habitat",
      "shortName": "Maestro",
      "description": "Find the coach. Master your learning.",
      "backgroundColor": "#ffffff",
      "themeColor": "#2563EB",
      "staticPath": "public"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/mh_logo_1024_transparent.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2563EB"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
